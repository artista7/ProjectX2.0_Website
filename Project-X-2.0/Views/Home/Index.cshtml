</div>

<!-- First Parallax Image with Logo Text -->
<div class="bgimg-1 w3-display-container w3-opacity-min w3-grayscale w3-sepia" id="home">
    <div class="w3-display-middle" style="white-space:nowrap;">
        <span class="w3-xxlarge w3-wide w3-text-black">Bawra-Kafila</span>
    </div>
</div>


<!-- Container (Upcoming Trips Section) -->
<div class="w3-content w3-container w3-padding-64" id="upcomingTrips">
    <h3 class="w3-center">Upcoming Trip</h3>
    <p class="w3-center">Harishchandra Garh via paachnai!</p>

    <!-- Responsive Grid. Four columns on tablets, laptops and desktops. Will stack on mobile devices/small screens (100% width) -->
    <div class="w3-row-padding w3-grayscale">
        <div class="w3-col l3 m6 w3-margin-bottom">
            <img src="~/images/LakeTsomgo.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="LakeTsomgo">
            <p class="w3-opacity w3-center">LakeTsomgo</p>
        </div>
        <div class="w3-col l3 m6 w3-margin-bottom">
            <img src="~/images/greenLake.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Green Lake">
            <p class="w3-opacity w3-center">Green Lake</p>
        </div>
        <div class="w3-col l3 m6 w3-margin-bottom">
            <img src="~/images/gurudongmar.JPG" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Gurudongmar">
            <p class="w3-opacity w3-center">Gurudongmar</p>
        </div>
        <div class="w3-col l3 m6 w3-margin-bottom">
            <img src="~/images/sikkim1.JPG" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Setting Sun">
            <p class="w3-opacity w3-center">Dusk</p>
        </div>
    </div>
    <div class="w3-row-padding w3-center w3-section">
        <button class="w3-button w3-padding-large w3-light-grey" style="margin-top:64px">LOAD MORE</button>
    </div>
</div>

<!-- Modal for full size images on click-->
<div id="modal01" class="w3-modal w3-black" onclick="this.style.display='none'">
    <span class="w3-button w3-large w3-black w3-display-topright" title="Close Modal Image"><i class="fa fa-remove"></i></span>
    <div class="w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
        <img id="img01" class="w3-image">
        <p id="caption" class="w3-opacity w3-large"></p>
    </div>
</div>

<!-- Second Parallax Image with Past Trips Text -->
<div class="bgimg-2 w3-display-container w3-opacity-min w3-grayscale w3-sepia" id="pastTrips">

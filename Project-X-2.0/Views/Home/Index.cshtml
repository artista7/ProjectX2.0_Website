    <div id="navDemo" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium">
        <a href="#upcomingTrips" class="w3-bar-item w3-button w3-center" onclick="toggleFunction()">Upcoming Trips</a>
        <a href="#pastTrips" class="w3-bar-item w3-button w3-center" onclick="toggleFunction()">Past Trips</a>
        <a href="#about" class="w3-bar-item w3-button w3-center" onclick="toggleFunction()">ABOUT</a>
